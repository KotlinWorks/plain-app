<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Column">

    <com.ismartcoding.plain.ui.views.ListItemView
        android:id="@+id/enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:keyText="@string/enable" />

    <TextView
        style="@style/Tips.Bottom"
        android:text="@string/must_in_the_same_lan" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_normal"
        android:layout_marginTop="@dimen/size_normal"
        app:selectionRequired="true"
        app:singleSelection="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_normal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/web_browser" />

        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:paddingStart="84dp"
            android:paddingEnd="0dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_lg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_tooltip"
            android:paddingHorizontal="@dimen/size_normal"
            android:paddingTop="@dimen/size_lg"
            android:paddingBottom="@dimen/size_sm"
            android:text="@string/enter_this_address_tips"
            android:textColor="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/tips"
        style="@style/Tips.Bottom" />

    <com.ismartcoding.plain.ui.views.ListItemView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_normal"
        app:keyText="@string/password" />

</LinearLayout>
